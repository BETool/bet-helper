{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true,
    "browser": true
  },
  "extends": "airbnb",
  "parser": "babel-eslint",
  "rules": {
    "space-before-function-paren": ["error", "always"],
    "no-param-reassign": ["error", { "props": false }],
    "yoda": ["error", "always"],
    "class-methods-use-this": 0,
    "no-unused-expressions": 0,
    "no-underscore-dangle": 0,
    "consistent-return": 0,
    "no-shadow": 0,
    "strict": 0,
  }
}
